<!-- ================= JAVASCRIPT ================= -->

<script>
function showCourseWise() {
  courseWise.classList.remove("hidden");
  cityWise.classList.add("hidden");
}

function showCityWise() {
  cityWise.classList.remove("hidden");
  courseWise.classList.add("hidden");
}

/* COURSE WISE */
function enableLevel() {
  levelSelect.disabled = !courseSelect.value;
  levelSelect.value = "";
}

function goCourseResult() {
  if (!courseSelect.value || !levelSelect.value) {
    alert("Please select Course and Level");
    return;
  }
  window.location.href =
    `colleges.php?mode=course&course_type=${courseSelect.value}&level=${levelSelect.value}`;
}

/* CITY WISE */
function enableCityLevel() {
  levelSelectCity.disabled = !citySelect.value;
  levelSelectCity.value = "";
  cityCourseSelect.disabled = true;
}

function enableCityCourse() {
  cityCourseSelect.disabled = !levelSelectCity.value;
}

function goCityResult() {
  if (!citySelect.value || !levelSelectCity.value || !cityCourseSelect.value) {
    alert("Please complete all selections");
    return;
  }
  window.location.href =
    `colleges.php?mode=city&city=${citySelect.value}&level=${levelSelectCity.value}&course_type=${cityCourseSelect.value}`;
}
</script>


